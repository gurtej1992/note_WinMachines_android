<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_50"
            android:layout_gravity="right"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:id="@+id/linear"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt_14"
                android:text="Enter Subject"
                android:id="@+id/sub_txt1"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/ivDismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/cross_white" />
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_50"
            android:id="@+id/etSubjectName"
            android:hint="Subject"
            android:layout_marginTop="@dimen/view_10"
            android:layout_marginLeft="@dimen/view_10"
            android:layout_marginRight="@dimen/view_10"
            android:paddingTop="@dimen/view_5"
            android:paddingBottom="@dimen/view_5"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:textColorHint="@color/grey"
            android:focusableInTouchMode="true"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/colorWhite"
            android:id="@+id/btAddSubject"
            android:layout_marginLeft="@dimen/view_20"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/view_15"
            android:layout_marginTop="@dimen/view_20"
            android:layout_marginRight="@dimen/view_20"
            />





</LinearLayout>